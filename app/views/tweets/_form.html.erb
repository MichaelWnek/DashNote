<%= simple_form_for(@tweet) do |f| %>
  <%= f.error_notification %>
    <div class="field">
      <div class="control">
        <%= f.input :tweet, label: "Dashing?...", input_html: { class: "textarea " }, wrapper:false, label_html: { class: "label" }, placeholder: "Compose a new DashNote", autofocus: true %>
      </div>
    </div>
  <%= f.button :submit, value="Create DashNote", class: "button is-info" %>
<% end %>